<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textview_billing_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Billing Code: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_billing_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Date: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_referring_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Referring Doctor: "
            android:textSize="14sp" />
            
        <TextView
            android:id="@+id/textview_emailed_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Emailed: "
            android:textColor="@color/emailedGreen"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView> 